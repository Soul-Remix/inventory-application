<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="stylesheets/style.css">
  <script src="javascripts/script.js" defer></script>
  <title>
    <%= title %>
  </title>
</head>

<body>
  <%- include('./partials/nav.ejs') %>
    <main class="main">
      <section>
        <h2>Current Inventory</h2>
        <div class="container inv">
          <div class="card">
            <a href="/products"><img class="card-img" src="images/num-products.jpg" alt=""></a>
            <div class="flex">
              <p>Products: <%= productsCount %>
              </p>
              <p>All Products: <%= allProductsCount %>
              </p>
            </div>
          </div>
          <div class="card">
            <a href="/Categories"><img class="card-img" src="images/num-categories.png" alt=""></a>
            <p>Categories: <%= categoriesCount %>
            </p>
          </div>
        </div>
      </section>
      <section>
        <h2 class="alert">Items Running Low:</h2>
        <div class="container">
          <% runningLow.forEach(function(item) { %>
            <div class="card">
              <a href=<%=item.url %>><img class="card-img" src=<%=item.image %> alt=<%=item.title %>></a>
              <p>
                <%= item.title %>
              </p>
              <p class="count">Count: <%= item.inStock %>
              </p>
            </div>
            <% }); %>
        </div>
      </section>
    </main>
</body>

</html>